<Window x:Class="ITMO.CSharp.Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITMO.CSharp.Calculator"
        mc:Ignorable="d"
        Title="Calculator" 
        Height="650" 
        Width="700" 
        ResizeMode="NoResize" 
        WindowState="Minimized" 
        Cursor="Hand">
    <Window.Resources>
        <SolidColorBrush x:Key="MyBrush" Color="White"/>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="#FF48484B"/>
            <Setter Property="FontSize" Value="50"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFABABB1"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Foreground" Value="{StaticResource MyBrush}"/>
            <Setter Property="FontFamily" Value="Trebuchet MS"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid x:Name="Menu1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox x:Name="Display" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="6" HorizontalContentAlignment="Right" IsEnabled="False" Text="0" BorderThickness="4"/>
        <Button x:Name="num1" Grid.Row="5" Grid.Column="1" Click="Num1_Click">1</Button>
        <Button x:Name="num2" Grid.Row="5" Grid.Column="2" Click="Num2_Click">2</Button>
        <Button x:Name="num3" Grid.Row="5" Grid.Column="3" Click="Num3_Click">3</Button>
        <Button x:Name="num4" Grid.Row="4" Grid.Column="1" Click="Num4_Click">4</Button>
        <Button x:Name="num5" Grid.Row="4" Grid.Column="2" Click="Num5_Click">5</Button>
        <Button x:Name="num6" Grid.Row="4" Grid.Column="3" Click="Num6_Click">6</Button>
        <Button x:Name="num7" Grid.Row="3" Grid.Column="1" Click="Num7_Click">7</Button>
        <Button x:Name="num8" Grid.Row="3" Grid.Column="2" Click="Num8_Click">8</Button>
        <Button x:Name="num9" Grid.Row="3" Grid.Column="3" Click="Num9_Click">9</Button>
        <Button x:Name="num0" Grid.Row="6" Grid.Column="2" Click="Num0_Click">0</Button>
        <Button x:Name="Point" Grid.Row="6" Grid.Column="3" Click="Point_Click">.</Button>
        <Button x:Name="PlusMinus" Grid.Row="6" Grid.Column="1" Click="PlusMinus_Click">+/-</Button>
        <Button x:Name="Divide" Grid.Row="2" Grid.Column="4" Click="Divide_Click">&#247;</Button>
        <Button x:Name="Multiply" Grid.Row="3" Grid.Column="4" Click="Multiply_Click">&#215;</Button>
        <Button x:Name="Substract" Grid.Row="4" Grid.Column="4" Click="Substract_Click">-</Button>
        <Button x:Name="Sum" Grid.Row="5" Grid.Column="4" Click="Sum_Click">+</Button>
        <Button x:Name="Equal" Grid.Row="6" Grid.Column="4" Click="Equal_Click">=</Button>
        <Button x:Name="Clear" Grid.Column="3" Grid.Row="2" Click="Clear_Click">C</Button>
        <Button x:Name="Delete" Grid.Column="5" Grid.Row="2" Click="Delete_Click" Visibility="Hidden">&lt;--</Button>

        <Button x:Name="Degree" ToolTip="Raising to degree" Grid.Column="6" Grid.Row="4" Click="Degree_Click" Visibility="Hidden">&#121;&#739;</Button>
        <Button x:Name="Square" ToolTip="Squaring" Grid.Column="5" Grid.Row="3" Click="Square_Click" Visibility="Hidden">x&#178;</Button>
        <Button x:Name="InverseValue" ToolTip="Inversal Value" Grid.Column="5" Grid.Row="4" Click="InverseValue_Click" Visibility="Hidden">1/x</Button>
        <Button x:Name="SqrRoot" ToolTip="Square Root" Grid.Column="5" Grid.Row="5" Click="SqrRoot_Click" Visibility="Hidden">&#8730;x</Button>
        <Button x:Name="Factorial" ToolTip="Factorial" Grid.Column="6" Grid.Row="2" Click="Factorial_Click" Visibility="Hidden">n!</Button>

        <Button x:Name="Cube" ToolTip="Cubing"  Grid.Column="6" Grid.Row="3" Click="Cube_Click" Visibility="Hidden">x&#179;</Button>
        <Button x:Name="QuadricEquation" ToolTip="Solving of Quadric Equation" Grid.Column="5" Grid.Row="6" Grid.ColumnSpan="2" Click="QuadricEquation_Click" Visibility="Hidden">ax&#178;+bx+c=0</Button>
        <Button x:Name="CubeRoot" ToolTip="Cube root" Grid.Column="6" Grid.Row="5" Click="CubeRoot_Click" Visibility="Hidden">&#8731;x</Button>
        <Menu Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <MenuItem Header="&#9776; Menu" HorizontalAlignment="Left">
                <MenuItem Header="Standard" HorizontalAlignment="Right" Width="150" Click="MenuItem_Click_2"/>
                <MenuItem Header="Scientific" HorizontalAlignment="Right" Width="150" Click="MenuItem_Click_1"/>
                <MenuItem Header="Exit" HorizontalAlignment="Right" Width="150" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Label Grid.ColumnSpan="5" Grid.Column="1" HorizontalContentAlignment="Right" FontSize="8"/>
    </Grid>
</Window>
